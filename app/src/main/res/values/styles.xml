<resources>

    <!-- Base application theme. -->
    <style name="AmpertechTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@color/ampertech_orange</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/ampertech_gray</item>
    </style>

    <style name="AmpertechTheme.LocationTitle" parent="AmpertechTheme">
        <item name="android:background">@color/ampertech_orange</item>
        <item name="android:textSize">@dimen/location_title_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/location_title_padding</item>
    </style>

</resources>
