<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingLeft="@dimen/remote_control_grid_padding_left"
    android:paddingRight="@dimen/remote_control_grid_padding_right"
    android:paddingTop="@dimen/remote_control_grid_padding_top"
    android:paddingBottom="@dimen/remote_control_grid_padding_bottom"
    android:gravity="center"
    >

    <GridView
        android:id="@+id/remote_control_grid_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/remote_control_grid_vertical_spacing"
        >

    </GridView>


</LinearLayout>
